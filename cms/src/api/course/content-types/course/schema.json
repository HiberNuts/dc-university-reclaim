{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "banner": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "string"
    },
    "aboutCourse": {
      "type": "text"
    },
    "duration": {
      "type": "decimal"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "Beginner",
        "Intermediate",
        "Advanced"
      ]
    },
    "skills": {
      "type": "customField",
      "options": [
        "Solidity",
        "Cryptography",
        "EVM",
        "React JS",
        "Javascript",
        "HTML",
        "CSS",
        "reactjs"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "nftImage": {
      "type": "string"
    },
    "whatYouLearn": {
      "displayName": "what you'll learn",
      "type": "component",
      "repeatable": true,
      "component": "course-metadata.what-you-ll-learn"
    },
    "faq": {
      "type": "component",
      "repeatable": true,
      "component": "course-metadata.faq"
    },
    "module": {
      "displayName": "module",
      "type": "component",
      "repeatable": true,
      "component": "course-metadata.module"
    }
  }
}
